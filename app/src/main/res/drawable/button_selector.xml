<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:left="1dp" android:top="1dp">
                <shape>
                    <corners android:radius="50dp" />

                </shape>
            </item>
            <item android:bottom="1dp" android:left="1dp">
                <shape>
                    <gradient android:angle="270"
                        android:endColor="#EE8AE4" android:startColor="#783887" />
                    <stroke android:width="1dp" android:color="#fff" />
                    <corners android:radius="50dp" />
                    <padding android:bottom="7dp" android:left="7dp"
                        android:right="7dp" android:top="7dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>