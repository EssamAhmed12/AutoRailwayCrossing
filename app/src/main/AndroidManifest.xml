<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.railway">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:configChanges="locale"
        android:allowBackup="true"
        android:icon="@drawable/railway1"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.railway.GateMan"
            android:label="@string/title_activity_gate_man"></activity>
        <activity
            android:name="com.example.railway.Driver"
            android:label="@string/title_activity_driver" />
        <activity
            android:name="com.example.railway.MainActivity">
        </activity>
        <activity android:name="com.example.railway.SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Chat"></activity>
        <activity android:name=".SignUp"
            android:label="@string/regestration"
            android:parentActivityName=".SignIn">
        </activity>
        <activity android:name=".SignIn"
            android:label="@string/sign_in"></activity>

    </application>

</manifest>